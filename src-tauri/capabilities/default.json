{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    "opener:default",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-exists",
    "fs:allow-stat",
    "fs:allow-audio-read-recursive",
    "fs:allow-home-read-recursive",
    "dialog:allow-open",
    "dialog:default"
  ]
}
