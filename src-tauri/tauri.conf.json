{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Music Player",
  "version": "0.1.0",
  "identifier": "com.michael-sinisterra.musicplayer",
  "build": {
    "beforeDevCommand": "bun dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Music Player",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "visible": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "script-src": "'self' 'unsafe-inline' 'wasm-unsafe-eval'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' asset: data: https://*.scdn.co https://*.spotifycdn.com https://*.googleusercontent.com",
        "media-src": "'self' asset: http://asset.localhost data: customprotocol:",
        "connect-src": "'self' https://api.spotify.com https://accounts.spotify.com",
        "font-src": "'self' data:",
        "object-src": "'none'",
        "base-uri": "'self'",
        "form-action": "'self'",
        "frame-ancestors": "'none'"
      },
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "**"
          ],
          "deny": [
            "$HOME/**/.ssh/**",
            "$HOME/**/.gnupg/**",
            "**/.git/**"
          ]
        }
      },
      "dangerousDisableAssetCspModification": false
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Michael Sinisterra",
    "copyright": "Copyright Â© 2025",
    "category": "Education",
    "shortDescription": "Modern music player with Spotify integration",
    "longDescription": "A desktop music player built with Tauri and SvelteKit, featuring local file playback and Spotify data integration."
  }
}