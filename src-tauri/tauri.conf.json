{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "musicplayer",
  "version": "0.1.0",
  "identifier": "com.michael-sinisterra.musicplayer",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Music Player",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' customprotocol: asset: https://asset.localhost; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost data: https://*.googleusercontent.com https://*.scdn.co https://*.spotifycdn.com; media-src 'self' asset: https://asset.localhost data:; connect-src 'self' https://api.spotify.com https://accounts.spotify.com",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$AUDIO/**", "$MUSIC/**", "$HOME/**", "**"],
          "deny": []
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
